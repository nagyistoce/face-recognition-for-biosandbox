<Window x:Class="FaceRecognitionClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Recognition" Height="530" Width="520"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid Height="490">
        <GroupBox Header="Upload do databázy" Height="96" HorizontalAlignment="Left" Margin="12,12,0,0" Name="groupBox1" VerticalAlignment="Top" Width="477">
            <Grid>
                <Button Content="Tréning" Height="23" HorizontalAlignment="Left" Margin="6,40,0,0" Name="button3" VerticalAlignment="Top" Width="117" Click="button3_Click" />
                <Label Content="Meno trénovacej osoby:" Height="28" HorizontalAlignment="Left" Margin="0,4,0,0" Name="label1" VerticalAlignment="Top" />
                <TextBox Height="23" HorizontalAlignment="Right" Margin="0,6,8,0" Name="textBox2" VerticalAlignment="Top" Width="314" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Porovnanie testovacieho vektoru s trénovacími vzorkami" Height="80" HorizontalAlignment="Left" Margin="10,128,0,0" Name="groupBox2" VerticalAlignment="Top" Width="477">
            <Grid>
                <Button Content="Porovnanie osoby" Height="23" HorizontalAlignment="Left" Margin="6,6,0,0" Name="button2" VerticalAlignment="Top" Width="117" Click="button2_Click" />
                <RadioButton Content="UDF funkcia 1" Height="16" HorizontalAlignment="Left" Margin="174,6,0,0" Name="radioButton1" VerticalAlignment="Top" IsChecked="True" />
                <RadioButton Content="UDF funkcia 2" Height="16" HorizontalAlignment="Left" Margin="174,26,0,0" Name="radioButton2" VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Odpoveď zo servera" HorizontalAlignment="Left" Margin="10,275,0,12" Name="groupBox3" Width="477">
            <Grid>
                <TextBox Height="199" HorizontalAlignment="Left" Margin="6,6,0,0" Name="textBox1" VerticalAlignment="Top" Width="453" />
            </Grid>
        </GroupBox>
        <ProgressBar Height="25" HorizontalAlignment="Left" Margin="88,233,0,0" Name="progressBar1" VerticalAlignment="Top" Width="313"/>
    </Grid>
</Window>
